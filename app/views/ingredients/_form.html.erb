<%= form_for @ingredient do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:'form-control', required:true %>
  </div>
  <div class="form-group">
    <%= f.label :cost %>
    <%= f.text_field :cost, class:'form-control', placeholder: 'example: 12', required:true %>
    <small id="costHelp" class="form-text text-muted">No need to include $</small>
  </div>
  <div class="form-group">
    <%= f.label :cost_unit, 'Unit' %>
    <%= f.text_field :cost_unit, placeholder:'example: lb', class:'form-control', required:true %>
  </div>    
  <div class="form-group">
    <%= f.label :cost_size, 'Size' %>
    <%= f.text_field :cost_size, class:'form-control', placeholder: 'example: 5', required:true %>
  </div>

  <div class="form-group">
    <%= f.submit class:'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>