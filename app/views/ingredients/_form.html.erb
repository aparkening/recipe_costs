<%= form_for ingredient, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:'form-control', required:true %>
  </div>
  <div class="form-group">
    <%= f.label :cost %>
    <%= f.text_field :cost, class:'form-control', required:true %>
  </div>
  <div class="form-group">
    <%= f.label :cost_size %>
    <%= f.text_field :cost_size, class:'form-control', required:true %>
  </div>
  <div class="form-group">
    <%= f.label :cost_unit %>
    <%= f.text_field :cost_unit, class:'form-control', required:true %>
  </div>    
  <div class="form-group">
    <%= f.submit class:'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>