<%= form_with model: recipe, url: [user, recipe], local: true do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :servings %>
    <%= f.text_field :servings, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit class:'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>
