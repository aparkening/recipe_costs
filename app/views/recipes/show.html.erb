<h1><%= @recipe.name %> (<small class="helper_links"><%= link_to 'Edit ', edit_user_recipe_path(@user) %> | <%= link_to "Delete", user_recipe_path(@user, @recipe), method: :delete, data: { confirm: "Are you sure?" } %></small>)</h1>

<h2>Total Cost: $<%= @recipe_total %></h2>


<% if @recipe.servings %>
  <h3>
    Serves <%= @recipe.servings %> | Cost per serving: $<%= @cost_per_serving %>
  </h3>
<% end %>

<h3>Ingredients</h3>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Cost</th>
      <th>Name</th>
      <th>Amount</th>
      <th>Amount Unit</th>
    </tr>
  </thead>
  <tbody>
    <% @recipe.recipe_ingredients.each_with_index do |recipe_ingredient, index| %>
      <tr>
        <td>$ <%= @recipe_ingredient_costs[index] %></td>
        <th scope="row"><%= recipe_ingredient.ingredient.name %></th>
        <td><%= recipe_ingredient.ingredient_amount %></td>
        <td><%= recipe_ingredient.ingredient_unit %></td>
      </tr>  
    <% end %>
  </tbody>  
</table>

<%= render "ingredients/import", path: user_recipes_import_path %>

<%= link_to "< All your recipes", user_recipes_path(@user) %>