<h1>Custom Ingredient Costs</h1>


<h2>Current Customizations</h2>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Links</th>
      <th>Name</th>
      <th>Cost</th>
      <th>Cost Size</th>
      <th>Cost Unit</th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |ingredient| %>
    <tr>
      <th><small><%= link_to 'Edit', edit_user_ingredient_cost_path(@user, ingredient), class:'text-muted' %> | <%= link_to "Delete", ingredient, method: :delete, class:'text-muted', data: { confirm: "Are you sure?" } %></small></th>
      <th scope="row"><%= ingredient.name %></td>
      <td>$ <%= ingredient.cost %></td>
      <td><%= ingredient.cost_size %></td>
      <td><%= ingredient.cost_unit %></td>
    </tr>  
    <% end %>
  </tbody>  
</table>
